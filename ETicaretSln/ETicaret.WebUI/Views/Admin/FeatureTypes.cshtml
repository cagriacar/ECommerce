
@{
    ViewBag.Title = "Özellik Tipleri";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@model IEnumerable<ETicaret.WebUI.Models.FeatureType>

<section class="panel">
    <header class="panel-heading">
        Özellik Tipleri
    </header>
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <div class="clearfix">
                <div class="btn-group">
                    <a href="/Admin/AddFeatureType" style="margin-bottom:10px;" class="btn btn-success">
                        Yeni Özellik Tipi <i class="icon-plus"></i>
                    </a>
                </div>
            </div>
            <div class="space15"></div>
            <table class="table table-striped table-hover table-bordered" id="editable-sample">
                <thead>
                    <tr>
                        <th>Özellik Tip Adı</th>
                        <th>Açıklama</th>
                        <th>Kategori</th>
                        <th>Güncelle</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var featureType in Model)
                    {
                        <tr class="">
                            <td>@featureType.Adi</td>
                            <td>@featureType.Aciklama</td>
                            @if (featureType.Category != null)
                            {
                                <td>@featureType.Category.Adi</td>
                            }
                            <td><a class="btn btn-primary" href="/Admin/UpdateFeatureType"><i class="icon-pencil"></i></a></td>
                            <td><a class="btn btn-danger" href="/Admin/RemoveFeatureType"><i class="icon-trash"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>

