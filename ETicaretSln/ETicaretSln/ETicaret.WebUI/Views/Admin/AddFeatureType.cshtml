
@{
    ViewBag.Title = "Özellik Tipi Ekle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@model IEnumerable<ETicaret.WebUI.Models.Category>
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Özellik Tipi Ekleme
            </header>
            <div class="panel-body">
                <div class="form">
                    <form class="cmxform form-horizontal tasi-form" id="commentForm" method="post" action="/Admin/AddFeatureType">
                        <div class="form-group ">
                            <label for="ccomment" class="control-label col-lg-2">Kategoriler</label>
                            <div class="col-lg-10">
                                <select name="CategoryId" class="form-control m-bot15">
                                    @foreach (var category in Model)
                                    {
                                        <option value="@category.Id">@category.Adi</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="cname" class="control-label col-lg-2">Özellik Tipi Adı</label>
                            <div class="col-lg-10">
                                <input class="form-control" id="cname" name="Adi" minlength="2" type="text" required />
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="cemail" class="control-label col-lg-2">Aciklama</label>
                            <div class="col-lg-10">
                                <input class="form-control " id="cemail" type="text" name="Aciklama" required />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-success" type="submit">Kaydet</button>
                                <a href="/Admin/FeatureTypes" class="btn btn-danger">İptal</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </div>
</div>

