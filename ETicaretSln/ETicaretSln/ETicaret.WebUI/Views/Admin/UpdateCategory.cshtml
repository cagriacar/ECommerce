
@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@model ETicaret.WebUI.Models.Category

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Kategori Güncelleme
            </header>
            <div class="panel-body">
                <div class="form">
                    <form class="cmxform form-horizontal tasi-form" id="commentForm" method="post" action="/Admin/UpdateCategory">
                        <div class="form-group">
                            <label for="cname" class="control-label col-lg-2">Kategori Adı</label>
                            <div class="col-lg-10">
                                <input class="form-control" id="cname" name="Adi" minlength="2" type="text" value="@Model.Adi" required />
                                <input type="hidden" name="Id" value="@Model.Id" class="form-control"/>
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="cemail" class="control-label col-lg-2">Aciklama</label>
                            <div class="col-lg-10">
                                <input class="form-control " id="cemail" type="text" name="Aciklama" value="@Model.Aciklama" required />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-success" type="submit">Kaydet</button>
                                <a href="/Admin/Categories" class="btn btn-danger">İptal</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </div>
</div>

