
@{
    ViewBag.Title = "Markalar";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@model IEnumerable<ETicaret.WebUI.Models.Mark>
@section head{
    <link href="/Content/Admin/assets/fancybox/source/jquery.fancybox.css" rel="stylesheet" />
}

<section class="panel">
    <header class="panel-heading">
        Markalar
    </header>
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <div class="clearfix">
                <div class="btn-group">
                    <a href="/Admin/AddMark" style="margin-bottom:10px;" class="btn btn-success">
                        Yeni Marka <i class="icon-plus"></i>
                    </a>
                </div>
            </div>
            <div class="space15"></div>
            <table class="table table-striped table-hover table-bordered" id="editable-sample">
                <thead>
                    <tr>
                        <th>Marka Adı</th>
                        <th>Açıklama</th>
                        <th>Resim Görüntüle</th>
                        <th>Güncelle</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var mark in Model)
                    {
                        <tr class="">
                            <td>@mark.Adi</td>
                            <td>@mark.Aciklama</td>
                            <td><a class="btn btn-success fancybox" href="@mark.Photo.OrtaYol"><i class="icon-eye-open"></i></a></td>
                            <td><a class="btn btn-primary" href="/Admin/UpdateMark"><i class="icon-pencil"></i></a></td>
                            <td><a class="btn btn-danger" href="/Admin/RemoveMark"><i class="icon-trash"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>


@section scripts{
    <script src="/Content/Admin/assets/fancybox/source/jquery.fancybox.js"></script>
    <script type="text/javascript">
      $(function() {
        //    fancybox
          jQuery(".fancybox").fancybox();
      });

    </script>
}

